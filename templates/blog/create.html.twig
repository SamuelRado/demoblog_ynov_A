{% extends "base.html.twig" %}

{% block body %}

	<h1>
		{% if editMode %}
			Edition de l'article
		{% else %}
			Création d'un article
		{% endif %}
	</h1>

	{# {{ form(formArticle) }} #}
	{# form() est une fonction twig qui permet d'afficher un formulaire #}
	{# chaque champ a un label automatiquement attribué qui correspond au nom de la propriété #}
	{# le champ content est un textarea : symfony est capable de savoir que ce champ est lié à une entité et de créer une balise adéquate #}

	{{ form_start(formArticle) }}
	{# form_widget() permet d'afficher et gérer un champ d'un formulaire #}
	{# form_row() permet d'afficher et gérer un champ d'un formulaire et son label #}

	{{ form_row(formArticle.title, {
    'label': 'Titre', 
    'attr': {
        'placeholder': "Titre de l'article"
    }
}) }}

	{{ form_row(formArticle.content, {
    'label': 'Contenu', 
    'attr': {
        'placeholder': "Contenu de l'article"
    }
}) }}

	{{ form_row(formArticle.imageFile) }}

	{{ form_row(formArticle.category, {
		'label': "Catégorie"
	}) }}

		<button type="submit" class="btn btn-primary"> 
		{% if editMode %}
			Enregistrer les modifications
		{% else %}
			Ajouter l'article
		{% endif %}
	</button>

	{{ form_end(formArticle) }}

{% endblock %}
